<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhaCompras.Views.NovoProduto"
             Title="Novo Produto">

    <ContentPage.ToolbarItens>
        <ToolbarItem Text="Salvr" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItens>

    <VerticalStackLayout>
        <Label Text="Descrição do Produto:" Pedding="'0"/>
        <Entry x:Name="txt_descrição" />
        
        <Label Text="Quantidade:" />
        <Entry x:Name="txt_quantidade" Keyboard="Numeric"/>
        
        <Label Text="Preço Unitário:" />
        <Entry x:Name="txt_preco" Keyboard="Numeric"/>
    </VerticalStackLayout>

    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>