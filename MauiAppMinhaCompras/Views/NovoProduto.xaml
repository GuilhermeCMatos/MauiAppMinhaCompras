<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhaCompras.Views.NovoProduto"
             Title="Novo Produto">

    <ContentPage.ToolbarItens>
        <ToolbarItem Text="Salvr" Clicked="ToolbarItem_Clicked"/>
        <!-- Botão para salvar o novo produto.-->
    </ContentPage.ToolbarItens>

    <VerticalStackLayout>
        <Label Text="Descrição do Produto:" Padding="0"/>
        <!-- Rótulo para o campo de descrição do produto.-->
        <Entry x:Name="txt_descrição" />
        <!-- Campo de entrada para a descrição do produto.-->

        <Label Text="Quantidade:" />
        <Entry x:Name="txt_quantidade" Keyboard="Numeric"/>
        <!-- Campo numérico para a quantidade. -->
        
        <Label Text="Preço Unitário:" />
        <Entry x:Name="txt_preco" Keyboard="Numeric"/>
        <!-- Campo numérico para o preço unitário --> 
    </VerticalStackLayout>

    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <!-- Mensagem padrão de boas-vindas ao MAUI. Pode ser removida se não for necessária. -->
    </VerticalStackLayout>
</ContentPage>